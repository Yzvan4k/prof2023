<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/jost_medium"
        android:text="Добро пожаловать!"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jost_medium"
        android:gravity="center_horizontal"
        android:text="Создайте пользователя, чтобы пользоваться функциями приложения"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Фамилия"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="#E6E6E6"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">

                    <EditText
                        android:id="@+id/UpLastname"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:background="#E6E6E6"
                        android:ems="10"
                        android:fontFamily="@font/jost_medium"
                        android:hint="Тицкий"
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/jost_medium"
                    android:text="Имя"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView4" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12">

                    <EditText
                        android:id="@+id/UpFirstname"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:backgroundTint="#00FFFFFF"
                        android:ems="10"
                        android:hint="Эдуард"
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/jost_medium"
                    android:text="Отчество"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView5" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView13">

                    <EditText
                        android:id="@+id/Uppatronymic"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:background="#00FFFFFF"
                        android:ems="10"
                        android:fontFamily="@font/jost_medium"
                        android:hint="Олегович "
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/jost_medium"
                    android:text="Пол"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView6" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15">

                    <EditText
                        android:id="@+id/UpSex"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:backgroundTint="#00FFFFFF"
                        android:ems="10"
                        android:fontFamily="@font/jost_medium"
                        android:hint="Мужской/Женский"
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/jost_medium"
                    android:text="Почта"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView7" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16">

                    <EditText
                        android:id="@+id/UpdateBirthDay"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:backgroundTint="#00FFFFFF"
                        android:ems="10"
                        android:fontFamily="@font/jost_medium"
                        android:hint=" 28 февраля 1991"
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/jost_medium"
                    android:text="Дата рождения"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView8" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17">

                    <EditText
                        android:id="@+id/UpMail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:backgroundTint="#00FFFFFF"
                        android:ems="10"
                        android:fontFamily="@font/jost_medium"
                        android:hint="example@mail.ru"
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/jost_medium"
                    android:text="Пароль"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView9" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView18">

                    <EditText
                        android:id="@+id/Uppass"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:backgroundTint="#00FFFFFF"
                        android:ems="10"
                        android:fontFamily="@font/jost_medium"
                        android:hint="********************"
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E6E6E6"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView19">

                    <EditText
                        android:id="@+id/Uppass2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginLeft="14dp"
                        android:backgroundTint="#00FFFFFF"
                        android:ems="10"
                        android:fontFamily="@font/jost_medium"
                        android:hint="********************"
                        android:inputType="textPersonName"
                        android:textColor="#263238"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/jost_medium"
                    android:text="Повторите пароль"
                    android:textColor="#263238"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView10" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="54dp"
                    android:layout_marginEnd="18dp"
                    android:backgroundTint="#FFC100"
                    android:fontFamily="@font/jost_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Регистрация"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView11" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/jost_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:shadowColor="#FFC100"
                    android:shadowRadius="3"
                    android:text="Назад"
                    android:textAllCaps="false"
                    android:textColor="#FFC100"
                    android:textSize="22dp"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button7"
                    app:strokeColor="#FFC100"
                    app:strokeWidth="3dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>